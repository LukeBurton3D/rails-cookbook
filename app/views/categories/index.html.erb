<div class="banner" style="background-image: url('<%= image_path "Banner2.jpg" %>')">
  <div>
    <h1>CookBook</h1>
    <h3>Save your favourite recipes</h3>
  </div>
</div>

<div class="container">
  <div class="info-top">
    <h2>List of categories</h2>
    <%= link_to "New category", new_category_path, class: "btn btn-outline-dark" %>
  </div>

  <div class="cards">
    <% @categories.each do |category| %>
      <%= link_to category_path(category), class: "btn btn-dark" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "banner3.png" %>')">
          <div>
            <h3><%= category.name %></h3>
            <p><%= category.bookmarks.count %> Recipes</p>
          </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
