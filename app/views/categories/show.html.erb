<% if @category.photo.attached? %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
    url('<%= cl_image_path @category.photo.key, height: 300, crop: :fill %>')">
<% else %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
    url('<%= image_path 'food.jpg', height: 300, crop: :fill %>')">
<% end %>
  <div>
    <h1><%= @category.name %></h1>
  </div>
</div>

<div class="container w-75">
  <div class="info-top">
    <h2>Recipes</h2>
    <%= link_to "Add a recipe", new_category_bookmark_path(@category, @bookmark), class: "btn btn-outline-dark" %>
  </div>

  <div class="cards">
    <% @category.bookmarks.each do |bookmark| %>
    <div class="card-trip">
      <img src="<%= bookmark.recipe.image_url %>"/>
      <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn-delete" do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
      <div class="card-trip-description">
        <h3><%= bookmark.recipe.name %></h3>
        <p><%= bookmark.recipe.description.truncate(100) %></p>
      </div>
      <div class="card-trip-infos">
        <div>
          <p><%= bookmark.comment %></p>
        </div>
        <div>
          <%= '⭐' * bookmark.recipe.rating %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<div>
<br>
<br>
<br>
</div>
